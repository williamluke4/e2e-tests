{
  "name": "nexus-schema",
  "scripts": {
    "start": "node dist/server",
    "clean": "rm -rf dist",
    "build": "npm -s run clean && npm -s run generate && tsc",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus-schema",
    "generate:prisma": "prisma generate",
    "generate:nexus-schema": "ts-node --transpile-only src/schema",
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly src/server"
  },
  "dependencies": {
    "@nexus/schema": "0.15.0",
    "@types/express": "4.17.7",
    "express": "4.17.1",
    "express-graphql": "0.10.2",
    "graphql": "14.6.0",
    "nexus-plugin-prisma": "0.18.2"
  },
  "devDependencies": {
    "@types/node": "12.12.56",
    "@types/react": "16.9.49",
    "@types/ws": "7.2.6",
    "ts-node": "9.0.0",
    "ts-node-dev": "1.0.0-pre.62",
    "typescript": "4.0.2"
  },
  "resolutions": {
    "@prisma/client": "2.8.1-dev.5",
    "@prisma/cli": "2.8.1-dev.5"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
